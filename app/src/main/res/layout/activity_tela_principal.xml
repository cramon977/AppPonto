<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPrincipal">


    <View
        android:id="@+id/user_principal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/container_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/logo"

        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toEndOf="@id/user_principal"/>


    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="@id/user_principal"
        app:layout_constraintStart_toStartOf="@id/user_principal"
        app:layout_constraintTop_toTopOf="@id/user_principal"
        app:layout_constraintBottom_toBottomOf="@id/user_principal"/>

    <ImageView
        android:id="@+id/icone_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/user_principal"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_user"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/text_nome_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome nome nome"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/icone_user"
        app:layout_constraintTop_toBottomOf="@id/user_principal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/icone_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_nome_usuario"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome nome nome"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/icone_email"
        app:layout_constraintTop_toBottomOf="@id/icone_user"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deslogar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:padding="20dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/icone_email"


        />

</androidx.constraintlayout.widget.ConstraintLayout>